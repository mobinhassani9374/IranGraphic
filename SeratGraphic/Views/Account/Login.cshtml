@using SeratGraphic.Models.Account
@model LoginModel
@{
    ViewData["Title"] = "ورود به ایران گرافیک";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-container default-page">
	<div class="title-breadcumbs">
		<div class="container">
			<div class="breadcrumb-container">
				<div class="breadcrumbs"><a href="/">ایران گرافیک</a><span
			class="separator">/</span><span> حساب من</span></div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="page-content default-page">
				<header class="entry-header">
					<h2 class="entry-title">حساب من</h2>
				</header>
				<article id="post-14" class="post-14 page type-page status-publish hentry">
					<div class="entry-content">
						<div class="woocommerce">
							<div class="woocommerce-notices-wrapper"></div>

							<h2>ورود به ایران گرافیک</h2>
							<form method="post" class="woocommerce-form woocommerce-form-login login">
								@Html.AntiForgeryToken()
								<div class="error" asp-validation-summary="All"></div>
								<p
									class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
									<label for="password">شماره همراه <span
											class="required">*</span></label>
									<input class="woocommerce-Input woocommerce-Input--text input-text"
									required placeholder="شماره همراه" type="number" name="PhoneNumber" id="PhoneNumber"
										autocomplete="current-password">
								</p>
								<p
									class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
									<label for="username">گذر واژه <span
										class="required">*</span></label>
									<input type="text" placeholder="گذر واژه"
										required   class="woocommerce-Input woocommerce-Input--text input-text"
									name="Password" id="Password">
								</p>
								
								<p><input class="button btn" style="background: #80bb01;color:#fff;width:200px" type="submit" value="ورود" /></p>
								<p class="woocommerce-LostPassword lost_password">
									<a
										href="/">گذرواژه
										خود را فراموش کرده اید؟</a>
								</p>
							</form>		
						</div>
					</div>
				</article> 
					&#65279;
				<div id="comments" class="comments-area"></div><!-- #comments .comments-area -->
				</div>
			</div>
		</div>
	</div>	
</div>
